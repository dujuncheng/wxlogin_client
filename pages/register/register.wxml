<!--index.wxml-->
<view class="register-container">
	<view class="block-item">
		邮箱：<input class="text-input" type="text" placeholder="请输入邮箱地址"  bindinput="bindEmailInput" focus />
	</view>
	<view class="block-item">
		密码：<input class="text-input"  type="text" placeholder="请输入6位以上的密码"  bindinput="bindPasswordInput" focus />
	</view>
	<!-- 普通注册  -->
	<button class="submit-btn" type="primary" bindtap="handleSubmit">普通注册</button>
	<!-- 授权注册 -->
	<button class="submit-btn" type="primary" open-type="getUserInfo"
			bindgetuserinfo="getUserInfo">授权注册(获取头像昵称)</button>
</view>
